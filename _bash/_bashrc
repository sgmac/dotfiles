# Shell env
export HOSTFILE="$HOME/.hostfile"
export HISTIGNORE="ls:cat:history:~:cd ~"
export HISTCONTROL=ignoreboth
export HISTSIZE=5000
export HISTFILESIZE=5000
export EDITOR=vi
export PATH=$PATH:$HOME/.tmux:${HOME}/.scripts

# allows to copy hidden files
shopt -s dotglob 
# update the values of LINES and COLUMNS.
shopt -s checkwinsize
shopt -s histappend
# If cd DIR  , where DIR could be a variable with a path
shopt -s cdable_vars
# Spell CD 
shopt -s cdspell
# Check jobs in background before exit
shopt -s checkjobs
# All lines of multiple-line command in the same history entry
shopt -s cmdhist
# Use ** in expansion path 
shopt -s globstar
# shopt -s hostcomplet    ssh user@@sg [TAB] complets to the hostname. @sg 
# When doing . FILE , looks for the file in $PATH
shopt -s sourcepath

###
#  FILES
##
if [ -f ~/.bash_colors ]; then
    . ~/.bash_colors
fi


if [ -f ~/.bash_funcs ]; then
    . ~/.bash_funcs
fi


if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi


if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi


#### If not running interactively, don't do anything
[ -z "$PS1" ] && return


[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"

prompt
