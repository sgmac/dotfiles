 /var/log $color${fs_used /var/log}/${fs_size /var/log} ${fs_bar 6 /var/log}
${color grey}Networking:
${if_existing /proc/net/route eth0}
Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
${else}	  No wired network${endif}
${color yellow}$hr
