[alias]
	ci = commit -a
	co = checkout
	st = status
	lol = log  --pretty=oneline --abbrev-commit --graph --decorate
	praise = blame
	ds = diff --staged
	amend = commit --amend -C HEAD
	undo = reset --soft HEAD^



[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto
[branch]
	color = true
